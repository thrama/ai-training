# Configurazione EDC-MCP-LLM Integration
# Copia questo file come config.ini e personalizza i valori

[api]
# URL base dell'API EDC
base_url = https://your-edc-instance.informatica.com/ldm/api/v2/browse

# Headers per autenticazione EDC
accept = application/json
authorization = Basic your_base64_encoded_credentials_here

# Parametri query per le chiamate API EDC
associations = core.DataSetDataElement,core.DirectionalDataFlow,core.DataFlowDataElement
includeDstLinks = false
includeRefObjects = false  
includeSrcLinks = true
offset = 0
pageSize = 500

# Asset di partenza per la costruzione dell'albero
root_id = your-root-asset-id-here
root_cod = 001

# Ottimizzazioni performance
request_timeout = 30
max_retries = 3
backoff_factor = 0.3
pool_connections = 10
pool_maxsize = 20

# Limiti costruzione albero
max_tree_depth = 100
max_total_nodes = 10000

# Deduplicazione link figli (sempre ID-only per semplicit√†)
enable_child_deduplication = true

[field_cross_reference]
# Configurazione Field Cross-Reference (opzionale)
enabled = false
csv_file = field_mappings.csv
# Struttura CSV: new (FIELD,TABELLA,ID_OGGETTO) o legacy (CDE,TABELLA,ID_OGGETTO)
csv_structure = new

[logging]
# Configurazione logging
level = INFO
format = json
file_enabled = true
console_enabled = true